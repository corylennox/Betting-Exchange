{
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13"
  },
  "scripts": {
    "all": "run-p server client",
    "client": "cd Client && npm start",
    "server": "cd Server && npm start",
    "setup": "sh setup.sh",
    "new-migration": "cd Server/db && npx knex migrate:make init",
    "migrate": "cd Server && npx knex migrate:latest --knexfile db/knexfile.js",
    "rollback": "cd Server && npx knex migrate:rollback --knexfile db/knexfile.js",
    "test": "run-p test-client test-server test-common",
    "test-client": "cd Client && npm test",
    "test-server": "cd Server && npm test",
    "test-common": "cd Common && npm test",
    "fetch-events": "cd Server && npm run fetch-events",
    "ssh-aws": "ssh -i \"Server/certificates/node-express-ec2.pem\" ubuntu@ec2-3-18-221-200.us-east-2.compute.amazonaws.com"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3"
  }
}
